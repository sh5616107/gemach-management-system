{
  "name": "gemach-management-system",
  "version": "2.9.30",
  "description": "Comprehensive Gemach Management System for loans, deposits and donations",
  "main": "electron.js",
  "homepage": "./",
  "author": {
    "name": "מפתח מערכת גמ\"ח",
    "email": "sh5616107@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.gemach.management",
    "productName": "Gemach Management System",
    "artifactName": "Gemach.Management.System.Setup.${version}.${ext}",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Gemach System Developer",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gemach Management System",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "כלים עסקיים",
      "displayLanguageSelector": false,
      "installerLanguages": ["he"],
      "language": "1037",
      "artifactName": "Gemach.Management.System.Setup.${version}.exe",
      "warningsAsErrors": false,
      "allowElevation": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "publish": null
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  }
}
