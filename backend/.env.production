# Production Environment
NODE_ENV=production

# Database - Production (Railway/Supabase)
DATABASE_URL="postgresql://user:password@host:5432/gemach_prod"

# JWT - MUST BE STRONG!
JWT_SECRET="CHANGE-THIS-TO-STRONG-RANDOM-STRING-IN-PRODUCTION"
JWT_EXPIRES_IN="24h"

# Server
PORT=3000

# CORS - Production Frontend URL
FRONTEND_URL="https://your-app.vercel.app"

# Email - Production (SendGrid/Mailgun)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT=587
SMTP_USER="apikey"
SMTP_PASS="YOUR-SENDGRID-API-KEY"
EMAIL_FROM="noreply@your-domain.com"

# SMS - Production (Inforu/Twilio)
SMS_USERNAME="your-production-username"
SMS_PASSWORD="your-production-password"
SMS_SENDER="GEMACH"

# Encryption - MUST BE STRONG!
ENCRYPTION_KEY="GENERATE-NEW-KEY-WITH-crypto.randomBytes"
