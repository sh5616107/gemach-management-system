# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Server
PORT=3000
NODE_ENV=production

# Database - Production (Railway/Neon/Supabase)
DATABASE_URL="postgresql://user:password@host:5432/gemach_prod"

# JWT - MUST BE STRONG!
JWT_SECRET="CHANGE-THIS-TO-STRONG-RANDOM-STRING"
JWT_EXPIRES_IN="24h"

# Frontend URL (for CORS)
FRONTEND_URL="https://your-frontend-url.vercel.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"

# SMS - Production
SMS_USERNAME="your-production-username"
SMS_PASSWORD="your-production-password"
SMS_API_URL="https://api.inforu.co.il"
SMS_SENDER="GEMACH"
